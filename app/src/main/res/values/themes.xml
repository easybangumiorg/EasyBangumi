<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyBangumi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorSecondary">#15c6ce</item>
        <item name="colorSecondaryVariant">#15c6ce</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="subtitleTextColor">#878c90</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor"  tools:targetApi="m">@color/white</item>
        <item name="android:colorForeground">?attr/colorOnSurface</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
    </style>

    <style name="Theme.Toolbar.Play" parent="Theme.EasyBangumi">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="Theme.EasyBangumi.Light" parent="Theme.EasyBangumi">
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorSecondary">#15c6ce</item>
        <item name="colorSecondaryVariant">#15c6ce</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="subtitleTextColor">#878c90</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="m">@color/white</item>
        <item name="android:colorForeground">?attr/colorOnSurface</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
    </style>

    <style name="Theme.EasyBangumi.Dark" parent="Theme.EasyBangumi">
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="colorPrimary">#252733</item>
        <item name="colorOnPrimary">#e0e0e2</item>
        <item name="colorPrimaryVariant">#252733</item>
        <item name="colorSecondary">#15c6ce</item>
        <item name="colorSecondaryVariant">#15c6ce</item>
        <item name="android:colorBackground">#323544</item>
        <item name="colorOnBackground">#e0e0e2</item>
        <item name="colorSurface">#3f4551</item>
        <item name="colorOnSurface">#e2e3e5</item>
        <item name="subtitleTextColor">#b4b5ba</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">#323544</item>
        <item name="android:colorForeground">?attr/colorOnSurface</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
    </style>

</resources>